@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms moz webkit official

verde = #2ecc71
rojo = #c72232
blanco = #f0f4f3


body
	font-family 'Oxigen', sans-serif
	background blanco


header
	background -moz-linear-gradient(top,  rgba(black.99) 0%, rgba(0,0,0,0) 150%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(black.99)), color-stop(150%,rgba(0,0,0,0)))
	background -webkit-linear-gradient(top,  rgba(black.99) 0%,rgba(0,0,0,0) 150%)
	background linear-gradient(top,  rgba(black.99) 0%,rgba(0,0,0,0) 150%)
	position fixed
	width 100%
	z-index 200

	.logo
		list-style none
		margin-left 150px
		margin-top 20px
		max-width 150px
		position relative
		transform translateX(-50%)
		img
			width 100%
	.mainMenu //div
		display block
		width 100%
		heigth 300px
		padding 0 100px 0 300px
		
		.mainMenuNav
			width 100%
			position absolute

			.mainMenuL
				list-style none
				width 80%
				display block
				margin-top -85px
				text-align center
				
				.mainMenuI
					float left
					padding 0
					border-right 1px solid rgba(white, .5)
					a
						color white
						font-size 20px
						float right
						width 100%
						padding 0px 15px 0px 15px
						&:hover
							text-decoration none
							background rgba(black, 0.2)
						
			input
				background verde
				color white
				font-size 18px
				padding 10px 15px 10px 15px
				border-radius 10px
				margin-left 150px
				margin-top -60px
				&:hover
					text-decoration none
					background rgba(white, 0.2)
					color black
				
.iniSlide
	.slides-pagination
		display none
	.slides-navigation
		a
			color white
			font-size 30px
			margin 2px
			&:hover
			&:focus
				text-decoration none
	.slideCont
		heigth 100%
		width 100%
		margin 0 auto
		background black
		z-index 3
		.slideInfo
			background rgba(black, .5)
			top 500px
			color white
			height 40%
			padding 0 1em
			position absolute
			text-align center
			width 60%
			h2
				font-size 35px
				font-weight 700
				text-transform uppercase
				&:before
					&:after
						content "--"
						color verde
			p
				font-size 20px


.hCont
	h2
		font-size 35px
		margin-left 80px
		width 88%	
		border-bottom 3px solid red		
.uni
	background blanco
	padding 30px 0px 5px 0px
	width 100%
	.uniImgCont
		margin-left 5%
		margin-top 2%
		padding-bottom 30px
		max-width 350px
		position relative
		img
			width 100%
	.uniInfo
		margin-top 2% 
		h3
			font-size 30px
		p
			font-size 20px

.services
	background blanco